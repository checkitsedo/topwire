{
    "name": "helhum/topwire",
    "type": "typo3-cms-extension",
    "description": "Wiring up backend and frontend in a dynamic and modern way using hotwire",
    "homepage": "https://github.com/helhum/topwire",
    "license": [
        "GPL-2.0-or-later"
    ],
    "authors": [
        {
            "name": "Helmut Hummel",
            "email": "typo3@helhum.io",
            "role": "Developer"
        }
    ],
    "config": {
        "allow-plugins": {
            "typo3/cms-composer-installers": false,
            "typo3/class-alias-loader": false
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Helhum\\Topwire\\": "Classes/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Helhum\\Topwire\\Tests\\": "Tests/"
        }
    },
    "require": {
        "typo3/cms-core": "^11.5"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-doctrine": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "saschaegerer/phpstan-typo3": "^1.1.2",
        "typo3/minimal": "*"
    },
    "extra": {
        "typo3/cms": {
            "extension-key": "topwire"
        }
    }
}
